python3 -m venv venv
source venv/bin/activate
pip3 install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/rocm6.2

git clone -b pytorch_2_4 https://github.com/SafeAD-GmbH/Sparse4D
cd Sparse4D
pip install --upgrade -r requirement.txt
cd projects/mmdet3d_plugin/ops
python3 setup.py develop
cd ../../../

pip install --upgrade matplotlib==3.10.0

mkdir -p data/nuscenes
cd data/nuscenes

# Download the NuScenes mini dataset (v1.0-mini.tgz) and extract it:
wget https://d36yt3mvayqw5m.cloudfront.net/public/v1.0/v1.0-mini.tgz
tar -xvf v1.0-mini.tgz

cd ..
mkdir nuscenes_anno_pkls
cd ..

python3 tools/nuscenes_converter.py --version v1.0-mini --info_prefix data/nuscenes_anno_pkls/nuscenes-mini
export PYTHONPATH=`pwd`:$PYTHONPATH
python3 tools/anchor_generator.py --ann_file data/nuscenes_anno_pkls/nuscenes-mini_infos_train.pkl

# For multi gpu training, replace the final 1 with the number of GPUs
# Also adjust the num_gpus variable in projects/configs/sparse4dv3_benchmark.py
bash tools/dist_train.sh projects/configs/sparse4dv3_benchmark.py 1
